extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='language') Language:
      input#language.form-control(type='text', placeholder='Programming language' name='language' required='true')
    
    div.form-group
      label(for='background') Background:
      input#background.form-control(type='text', placeholder='Background' name='background' required='true')
    
    div.form-group
      label(for='confidence') Confidence:
      input#confidence.form-control(type='text', placeholder='Confidence' name='confidence' required='true')
    
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg