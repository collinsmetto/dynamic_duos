extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='language') Langauge:
      input#language.form-control(type='text' placeholder='Language (Java) last' name='language' required='true' value=(undefined===attribute ? '' : attribute.language) )
     
    div.form-group
         button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg